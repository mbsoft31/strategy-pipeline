# Production Environment Configuration Template
# Copy this to .env in production and fill in real values

# REQUIRED: Set to production
ENVIRONMENT=production

# REQUIRED: LLM Provider Configuration
LLM__PROVIDER=openai
# OR
# LLM__PROVIDER=openrouter

# REQUIRED: Model Settings
LLM__MODEL=gpt-4o-mini
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=2000

# REQUIRED: Production API Keys
# Choose based on your LLM__PROVIDER setting
LLM__OPENAI_API_KEY=your-production-openai-key-here
# OR
# LLM__OPENROUTER_API_KEY=your-production-openrouter-key-here
# LLM__OPENAI_BASE_URL=https://openrouter.ai/api/v1

# REQUIRED: Production Flask Secret (MUST be secure!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secure-random-64-character-hex-string-here

# Production Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=8000

# Production Data Directory
DATA_DIR=/var/data/strategy-pipeline

# Optional: Performance Tuning
LLM__RATE_LIMIT=10.0
LLM__MAX_RETRIES=3
LLM__TIMEOUT=60

# Optional: Validation Service
VALIDATION__OPENALEX_MAILTO=your-email@example.com
VALIDATION__OPENALEX_RATE_LIMIT=9.0

# Optional: Logging
LOG_LEVEL=WARNING
DEBUG=false


# Strategy Pipeline - Environment Configuration Template
# Copy this file to .env and customize for your environment

# ==========================================
# Environment Selection
# ==========================================
# Options: development, testing, production
ENVIRONMENT=development

# General Settings
DEBUG=true
LOG_LEVEL=DEBUG

# ==========================================
# LLM Provider Configuration
# ==========================================

# Provider: mock, openai, or openrouter
LLM__PROVIDER=mock

# Model Settings
LLM__MODEL=gpt-4o-mini
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=2000

# API Keys (set based on your provider)
# For OpenAI:
# LLM__OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx

# For OpenRouter:
# LLM__OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxxx
# LLM__OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Rate Limiting
LLM__RATE_LIMIT=10.0
LLM__RATE_LIMIT_BURST=20

# Retry Configuration
LLM__MAX_RETRIES=3
LLM__RETRY_BASE_DELAY=1.0
LLM__RETRY_MAX_DELAY=60.0

# Timeout (seconds)
LLM__TIMEOUT=30

# Cache Settings
LLM__CACHE_DIR=.cache/llm
LLM__CACHE_ENABLED=false

# ==========================================
# Validation Services (OpenAlex)
# ==========================================

# Your email for polite OpenAlex requests (recommended)
VALIDATION__OPENALEX_MAILTO=your.email@example.com
VALIDATION__OPENALEX_RATE_LIMIT=9.0
VALIDATION__OPENALEX_TIMEOUT=30
VALIDATION__OPENALEX_CACHE_ENABLED=true
VALIDATION__OPENALEX_CACHE_TTL=86400

# ==========================================
# Flask Web Server
# ==========================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# ==========================================
# Data Storage
# ==========================================
DATA_DIR=./data

# ==========================================
# Error Handling
# ==========================================
FAIL_ON_LLM_ERROR=true

# ==========================================
# Pipeline Settings
# ==========================================

# Data directory
DATA_DIR=./data

# Error handling: fail fast or graceful degradation
FAIL_ON_LLM_ERROR=True

